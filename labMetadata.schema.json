{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lab Metadata",
  "type": "object",
  "properties": {
    "contentOwners": {
      "type": "array",
      "description": "A list of lab content owner Microsoft aliases"
    },
    "labType": {
      "type": "string",
      "description": "The type of lab",
      "enum": [
        "individual",
        "shared",
        "individualAndShared",
        "corporate"
      ]
    },
    "maximumParticipants": {
      "type": "integer",
      "description": "Maximum number of participants (based on content, structure, limitations, etc)"
    },
    "groupSize": {
      "type": "integer",
      "description": "If using groups, define the size of each group"
    },
    "deliveryFormat": {
      "type": "string",
      "description": "The format of the delivery",
      "enum": [
        "self-paced",
        "instructor-led"
      ]
    },
    "requiredRetention": {
      "type": "integer",
      "description": "Expected retention for lab resources in days"
    },
    "requiredRegion": {
      "type": "string",
      "description": "If a specific Azure region is required, specify by name",
      "enum": [
        "asia",
        "asiapacific",
        "australia",
        "australiacentral",
        "australiacentral2",
        "australiaeast",
        "australiasoutheast",
        "brazil",
        "brazilsouth",
        "brazilsoutheast",
