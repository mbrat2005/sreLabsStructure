        "unitedstates",
        "westcentralus",
        "westeurope",
        "westindia",
        "westus",
        "westus2",
        "westus3"
      ]
    },
    "validRegions": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "asia",
          "asiapacific",
          "australia",
          "australiacentral",
          "australiacentral2",
          "australiaeast",
          "australiasoutheast",
